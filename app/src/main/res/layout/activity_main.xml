<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnStandard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="150dp"
        android:background="#4CAF50"
        android:backgroundTint="#4CAF50"
        android:text="Standatrd Chatered Bank"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnStansbic"
        app:layout_constraintTop_toBottomOf="@+id/btnDTB" />

    <Button
        android:id="@+id/btnStansbic"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="150dp"
        android:background="#4CAF50"
        android:backgroundTint="#4CAF50"
        android:text="Stanbic                   Bank"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnStandard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnABSA" />

    <Button
        android:id="@+id/btnDTB"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="199dp"
        android:background="#4CAF50"
        android:backgroundTint="#4CAF50"
        android:text="Diamond Trust Bank"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toTopOf="@+id/btnStandard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnABSA"
        app:layout_constraintTop_toBottomOf="@+id/btnKCB" />

    <Button
        android:id="@+id/btnABSA"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="199dp"
        android:background="#4CAF50"
        android:backgroundTint="#4CAF50"
        android:text="ABSA                   Bank"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toTopOf="@+id/btnStansbic"
        app:layout_constraintEnd_toStartOf="@+id/btnDTB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCooperative" />

    <Button
        android:id="@+id/btnCooperative"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="119dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="174dp"
        android:background="#009688"
        android:backgroundTint="#009688"
        android:text="Co-operative Bank"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toTopOf="@+id/btnABSA"
        app:layout_constraintEnd_toStartOf="@+id/btnKCB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnKCB"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="115dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="174dp"
        android:background="#4CAF50"
        android:backgroundTint="#4CAF50"
        android:text="KCB                   Bank"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toTopOf="@+id/btnDTB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnCooperative"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>